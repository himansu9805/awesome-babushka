{
  "name": "UI",
  "image": "ghcr.io/nhaef/devcontainer-bun:latest",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [],
  "postCreateCommand": "bun install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "tal7aouy.icons",
        "EchoAPI.echoapi-for-vscode"
      ]
    }
  },
  "remoteUser": "root",
  "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces/awesome-babushka,type=bind",
  "workspaceFolder": "/workspaces/awesome-babushka/ui"
}